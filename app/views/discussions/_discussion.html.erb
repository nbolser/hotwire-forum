<div id=<%= dom_id(discussion) %>>
  <h2><%= link_to discussion.name, discussion %></h2>
  <p>Pinned: <%= discussion.pinned %> | Closed: <%= discussion.pinned %> </p>
  <div>
    <%= link_to "Edit", edit_discussion_path(discussion) %> |
    <%= link_to "Delete" , discussion, method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
